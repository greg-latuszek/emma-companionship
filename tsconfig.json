{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@emma/shared-types": ["./packages/shared-types/src"],
      "@emma/ui": ["./packages/ui/src"],
      "@emma/config": ["./packages/config/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules"],
  "files": []
}
